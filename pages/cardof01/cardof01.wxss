page{
  width: 100%;
  /* height: 100%; */
  background-color: rgb(236, 236, 236);
}
 
.title {
  width: 100%;
  height: 88rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-around;
  position:fixed;
  top: 0;
}
 
.titleSel1, .titleSel2, .titleSel3 {
  width: 33%;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-weight: bold;
}

.titleSel1 {
  color: #91a8d0;
}

.titleSel2 {
  color: #7B6564;
}

.titleSel3 {
  color: #5E5E60;
}

.headerLineSel1, .headerLineSel2, .headerLineSel3 {
  height: 6rpx;
  width: 40rpx;
  position: relative;
  margin-top: 10rpx;
  
}
 
.headerLineSel1 {
  background: #91a8d0;
}

.headerLineSel2 {
  background: #7B6564;
}

.headerLineSel3 {
  background: #5E5E60;
}
 
.headerLineUnsel {
  background: #fff;
  height: 6rpx;
  width: 40rpx;
  position: relative;
  margin-top: 10rpx;
}
 
.tabs {
  margin-top: 128rpx;
}
 
.tabs, .tab1, .tab2, .tab3{
  width: 100%;
  height: 100%;
  text-align: center;
}

.list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 30rpx;
}

.item {
  margin-left: 50rpx;
  margin-bottom: 50rpx;
  background-color: #91a8d0;
  box-shadow: 5rpx 5rpx 12rpx rgb(184, 183, 183);
  height: 390rpx;
  width: 300rpx;
  display: flex;
  flex-direction: column;
  color: #fff;
  font-family: Arial, Helvetica, sans-serif;
}

.item-name {
  /* margin-top: 10rpx; */
  height: 90rpx;
  /* background-color: darkseagreen; */
  /* text-align: center; */
  /*flex 布局*/
  display: flex;
  /*实现垂直居中*/
  align-items: center;
  /*实现水平居中*/
  justify-content: center;
  font-size: 26rpx;
  line-height: 1.3;
  font-weight: 500;
}

.big {
  font-size: 30rpx;
}

.item2 {
  background-color: #f7cac9;
  color: #7B6564;
}

.item3 {
  background-color: #BCBDC1;
  color: #5E5E60;
}

.img-container {
  width: 300rpx;
  height: 300rpx;
  overflow: hidden;
  /* margin-bottom: 20rpx; */
}

.item image {
  width: 280rpx;
  height: 280rpx;
  margin-top: 10rpx;
}

.footer {
  /* position: fixed;
  bottom: 0; */
  text-align: center;
  height: 40rpx;
  margin-bottom: 40rpx;
  font-style: italic;
  font-size: 26rpx;
  color: rgb(87, 87, 87);
}